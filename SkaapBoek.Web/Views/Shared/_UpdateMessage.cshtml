@if (TempData["Success"] != null)
{
  <div class="container position-fixed">
    <div class="row">
      <div class="col-12 d-flex justify-content-end">
        <div id="pageSuccessAlert" class="mr-3 alert alert-success alert-dismissible fade show">
          @TempData["Success"]
          <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
          </button>
        </div>
      </div>
    </div>
  </div>
}

@if (TempData["Failure"] != null)
{
  <div class="container position-fixed">
    <div class="row">
      <div class="col-12 d-flex justify-content-end">
        <div id="pageSuccessAlert" class="mr-3 alert alert-danger alert-dismissible fade show">
          @TempData["Failure"]
          <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
          </button>
        </div>
      </div>
    </div>
  </div>
}