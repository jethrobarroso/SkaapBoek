@model MoveToPhaseModel

<div class="modal fade" id="moveToPhaseModal" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Move To Phase</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="moveToPhaseForm" method="post">
          <input hidden asp-for="GroupId" />
          <div class="form-row">
            <div class="form-group col-6">
              <label asp-for="StartDate"></label>
              <input asp-for="StartDate" class="form-control" />
              <span asp-validation-for="StartDate"></span>
            </div>
            <div class="form-group col-6">
              <label asp-for="PhaseId"></label>
              <select asp-for="PhaseId" class="form-control" asp-items="Model.Phases"></select>
              <span asp-validation-for="PhaseId"></span>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer d-flex justify-content-between">
        <div>
          <div class="btn btn-secondary" data-dismiss="modal">Close</div>
          <button id="moveGroupBtn" class="btn btn-primary">Move</button>
        </div>
      </div>
    </div>
  </div>
</div>