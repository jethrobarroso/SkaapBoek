@model RemoveMilsGroupModel

<div class="modal fade" id="removeMilsGroupModal" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Remove and relocate</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><strong>NOTE: </strong> This action will remove the group from the process and relocate the group to a another pen.</p>
        <form id="removeMilsGroupForm" method="post">
          <input hidden asp-for="GroupIdToRemove" />
          <div class="form-row">
            <div class="form-group col-12">
              <label asp-for="PenIdToMoveGroup"></label>
              <select asp-for="PenIdToMoveGroup" class="form-control" asp-items="Model.Pens"></select>
              <span asp-validation-for="PenIdToMoveGroup"></span>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <div>
          <div class="btn btn-secondary" data-dismiss="modal">Close</div>
          <button id="removeGroupBtn" class="btn btn-danger">Remove</button>
        </div>
      </div>
    </div>
  </div>
</div>