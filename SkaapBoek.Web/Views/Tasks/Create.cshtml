@model SkaapBoek.Core.TaskInstance

@{
  ViewData["Title"] = "Create";
}

<div class="text-light">
  <h1 class="mb-3">Create Task</h1>

  <form id="taskCreateForm" asp-action="Create">
    <input type="hidden" asp-for="Id" />
    <div class="form-row mb-3">
      <div class="col-md-6">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="col-md-6">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
      </div>
    </div>
    <div class="form-row mb-3">
      <div class="col-md-6">
        <label asp-for="PriorityId" class="control-label"></label>
        <select asp-for="PriorityId" class="form-control" asp-items="ViewBag.PriorityId"></select>
        <span asp-validation-for="PriorityId" class="text-danger"></span>
      </div>
      <div class="col-md-6">
        <label asp-for="DurationDays" class="control-label"></label>
        <input asp-for="DurationDays" class="form-control" />
        <span asp-validation-for="DurationDays" class="text-danger"></span>
      </div>
    </div>
    <div class="form-row mb-3">
      <div class="col-md-6">
        <label asp-for="StatusId" class="control-label"></label>
        <select asp-for="StatusId" class="form-control" asp-items="@ViewBag.StatusList"></select>
        <span asp-validation-for="StatusId" class="text-danger"></span>
      </div>
    </div>
    <div class="form-row mb-3">
      <div class="col-12">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
      </div>
    </div>

    <h3 class="mt-3 mb-3">Assigned to</h3>
    <div class="form-row mb-3">
      <div class="col-md-6">
        <label asp-for="GroupId" class="control-label"></label>
        <select asp-for="GroupId" class="form-control" asp-items="ViewBag.GroupId">
          <option value="" selected disabled hidden>Select sheep group...</option>
          <option value="">None</option>
        </select>
        <span asp-validation-for="GroupId" class="text-danger"></span>
      </div>
    </div>
    <div class="form-row mb-3">
      <div class="col-md-6">
        <label asp-for="SheepId" class="control-label"></label>
        <select asp-for="SheepId" class="form-control" asp-items="ViewBag.SheepId">
          <option value="" selected disabled hidden>Select sheep...</option>
          <option value="">None</option>
        </select>
        <span asp-validation-for="SheepId" class="text-danger"></span>
      </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mt-3">
      <input type="submit" value="Save" class="btn btn-primary" />
    </div>

  </form>

  <div>
    <a asp-action="Index">Back to List</a>
  </div>
</div>

@section Scripts {
<script defer>
  $(function () {
    appns.tasks.create();
  });
</script>
}