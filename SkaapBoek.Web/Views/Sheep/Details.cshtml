@model Sheep

@{
  ViewBag.Title = "Sheep Details";
}

<a asp-action="Index" class=" m-3 home-link-arrow d-inline-flex align-items-center">
  <svg><use xlink:href="/images/main.svg#icon-arrow-left"></use></svg>

  Return to list
</a>

<div class="col-lg-6">
  <div class="card">
    <div data-sb-tag="@Model.TagNumber" class="card-header bg-secondary text-light">
      <h3>Sheep Details - @Model.TagNumber</h3>
    </div>
    <div class="card-body bg-dark text-light text-break">
      <dl class="row mb-0">
        <dt class="col-sm-3 col">Tag Color:</dt>
        <dd class="col-sm-9 col">@Model.Color.Name</dd>
        <dt class="col-sm-3 col">Gender:</dt>
        <dd class="col-sm-9 col">@Model.Gender.Type</dd>
        <dt class="col-sm-3 col">Weight:</dt>
        <dd class="col-sm-9 col">@Model.Weight kg</dd>
        <dt class="col-sm-3 col">Birth Date:</dt>
        <dd class="col-sm-9 col">@Model.BirthDate</dd>
        <dt class="col-sm-3 col">State:</dt>
        <dd class="col-sm-9 col">@Model.SheepStatus.Name</dd>
        <dt class="col-sm-3 col">Acquire Date:</dt>
        <dd class="col-sm-9 col">@Model.AcquireDate</dd>
        <dt class="col-sm-3 col">Cost Price:</dt>
        <dd class="col-sm-9 col">@Model.CostPrice</dd>
        <dt class="col-sm-3 col">Sale Price:</dt>
        <dd class="col-sm-9 col">@Model.SalePrice</dd>
      </dl>
    </div>
    <div class="card-footer bg-secondary">
      <div class="m-3">
        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
  <partial name="_ModalDelete" />
</div>

@if (Model.Relationships.Any())
{
  <h4 class="h4 mt-4 mb-4 text-light">Children</h4>
  <div class="table-responsive-md text-light">
    <table id="childrenTable" class="table table-striped table-dark table-hover" style="width:100%">
      <thead>
        <tr>
          <th class="filterable"><div>Tag</div></th>
          <th class="filterable"><div>Tag Color</div></th>
          <th class="filterable"><div>State</div></th>
          <th class="filterable"><div>Gender</div></th>
          <th class="filterable"><div>Weight (kg)</div></th>
          <th class="filterable"><div>Birth Date</div></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var r in Model.Relationships)
        {
          <tr>
            <td>@r.Child.TagNumber</td>
            <td>@r.Child.Color.Name</td>
            <td>@r.Child.SheepStatus.Name</td>
            <td>@r.Child.Gender.Type</td>
            <td>@r.Child.Weight</td>
            <td>@r.Child.BirthDate.ToShortDateString()</td>
            <td>
              <div class="d-flex align-content-center">
                <a class="icon-button mr-1 ml-1" asp-action="ChildDetails" asp-route-id="@r.Child.Id"
                   data-toggle="tooltip" data-placement="top" title="View">
                  <i class="material-icons">search</i>
                </a>
                <a class="icon-button mr-1 ml-1" asp-action="Edit" asp-route-id="@r.Child.Id"
                   data-toggle="tooltip" data-placement="top" title="Edit">
                  <i class="material-icons">edit</i>
                </a>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
}
else
{
  <div class="mt-4 alert alert-info">
    <p>This sheep does not have any children.</p>
    <a class="mt-2 btn btn-primary" asp-action="Create">Edit parent relationships</a>
  </div>
}

@section Scripts {
  <script defer>
    $(function () {
      appns.sheep.details();
    })
  </script>
}