@model Sheep

@{
  ViewBag.Title = "Sheep Details";
}

<div class="col-lg-6">
  <div class="card">
    <div data-sb-tag="@Model.TagNumber" class="card-header bg-secondary text-light">
      <h3>Sheep Details - @Model.TagNumber</h3>
    </div>
    <div class="card-body bg-dark text-light text-break">
      <div class="row mb-2">
        <div class="col-sm-3 col">Tag Color:</div>
        <div class="col-sm-9 col">@Model.Color.Name</div>
      </div>
      <div class="row mb-2">
        <div class="col-sm-3 col">Gender:</div>
        <div class="col-sm-9 col">@Model.Gender.Type</div>
      </div>
      <div class="row mb-2">
        <div class="col-sm-3 col">Weight:</div>
        <div class="col-sm-9 col">@Model.Weight kg</div>
      </div>
      <div class="row mb-2">
        <div class="col-sm-3 col">Birth Date:</div>
        <div class="col-sm-9 col">@Model.BirthDate</div>
      </div>
      <div class="row mb-2">
        <div class="col-sm-3 col">State:</div>
        <div class="col-sm-9 col">@Model.SheepStatus.Name</div>
      </div>
      <div class="row mb-2">
        <div class="col-sm-3 col">Acquire Date:</div>
        <div class="col-sm-9 col">@Model.AcquireDate</div>
      </div>
      <div class="row mb-2">
        <div class="col-sm-3 col">Cost Price:</div>
        <div class="col-sm-9 col">@Model.CostPrice</div>
      </div>
      <div class="row mb-2">
        <div class="col-sm-3 col">Sale Price:</div>
        <div class="col-sm-9 col">@Model.SalePrice</div>
      </div>
    </div>
    <div class="card-footer bg-secondary">
      <div class="m-3">
        <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
        <a asp-action="Edit" class="btn btn-primary">Edit</a>
      </div>
    </div>
  </div>
  <a asp-action="Index" class=" m-3 home-link-arrow d-inline-flex align-items-center">
    <svg><use xlink:href="/images/main.svg#icon-arrow-left"></use></svg>

    Return to list
  </a>

  <partial name="_ModalDelete" />
</div>

@section Scripts {
  <script defer>
    document.addEventListener("DOMContentLoaded", () => appns.sheep.details());
  </script>
}