<form method="post">
  <table id="herdTable" class="table table-striped table-dark table-hover" style="width:100%">
    <thead>
      <tr>
        <th>Id</th>
        <th>Tag</th>
        <th>Tag Color</th>
        <th>State</th>
        <th>Gender</th>
        <th>Weight (kg)</th>
        <th>Birth Date</th>
        <th>Mother</th>
        <th>Father</th>
        <th>Action</th>
      </tr>
    </thead>
  </table>
</form>

@section scripts {
<script>
  $(function () {
    $("#herdTable").DataTable({
      "processing": true,
      "serverSide": true,
      "searchDelay": 1000,
      "filter": true,
      "ajax": {
        "url": "/api/sheeptest",
        "type": "POST",
        "datatype": "json",
        "data": { "__RequestVerificationToken": $(':input[name="__RequestVerificationToken"]').val()}
      },
      "columnDefs": [{
        "targets": [0],
        "visible": false,
        "searchable": false
      }],
      headers: {
        AntiForgeryToken: $(':input[name="__RequestVerificationToken"]').val()
      },
      "columns": [
        { "data": "id", "name": "Id", "autoWidth": true },
        { "data": "tagNumber", "name": "Tag", "autoWidth": true },
        { "data": "color.name", "defaultContent": "<i>None</i>", "name": "color.name", "autoWidth": true },
        { "data": "sheepStatus.name", "defaultContent": "<i>None</i>", "name": "sheepStatus.name", "autoWidth": true },
        { "data": "gender.type", "defaultContent": "<i>None</i>", "name": "gender.type", "autoWidth": true },
        { "data": "weight", "name": "weight", "autoWidth": true },
        { "data": "birthDate", "name": "birthDate", "autoWidth": true },
        { "data": "mother.tagNumber", "defaultContent": "<i>None</i>", "name": "mother.tagNumber", "autoWidth": true },
        { "data": "father.tagNumber", "defaultContent": "<i>None</i>", "name": "father.tagNumber", "autoWidth": true },
        {
          "render": function (data, row) { return "<a href='#' class='btn btn-danger' onclick=DeleteCustomer('" + row.id + "'); >Delete</a>"; }
        },
      ]
    });
  });
</script>
}