@model SheepIndexViewModel

@{
  ViewBag.Title = "Sheep List";
}

<div class="shadow rounded bg-secondary p-1 pl-3 mb-3">
  <h1 class="text-light mb-3 display-4">Farm Sheep</h1>
</div>

<h4 class="text-light mb-3">Herd</h4>
@if (TempData["Success"] != null)
{
  <div class="alert alert-success alert-dismissible fade show">
    @TempData["Success"]
    <button type="button" class="close" data-dismiss="alert">
      <span>&times;</span>
    </button>
  </div>
}

@if (Model.HerdSheep.Any())
{
  <div class="table-responsive-md text-light">
    <table id="herdTable" class="table table-striped table-dark table-hover" style="width:100%">
      <thead>
        <tr>
          <th class="filterable"><div>Tag</div></th>
          <th class="filterable"><div>Tag Color</div></th>
          <th class="filterable"><div>State</div></th>
          <th class="filterable"><div>Gender</div></th>
          <th class="filterable"><div>Weight (kg)</div></th>
          <th class="filterable"><div>Birth Date</div></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var sheep in Model.HerdSheep)
        {
          <tr>
            <td>@sheep.TagNumber</td>
            <td>@sheep.Color.Name</td>
            <td>@sheep.SheepStatus.Name</td>
            <td>@sheep.Gender.Type</td>
            <td>@sheep.Weight</td>
            <td>@sheep.BirthDate.ToShortDateString()</td>
            <td>
              <div class="d-flex align-content-center">
                <a class="icon-button mr-1 ml-1" asp-action="Details" asp-route-id="@sheep.Id"
                   data-toggle="tooltip" data-placement="top" title="View">
                  <i class="material-icons">search</i>
                </a>
                <a class="icon-button mr-1 ml-1" asp-action="Edit" asp-route-id="@sheep.Id"
                   data-toggle="tooltip" data-placement="top" title="Edit">
                  <i class="material-icons">edit</i>
                </a>
                <span data-toggle="tooltip" class="icon-button--delete mr-1 ml-1" data-placement="top" title="Delete">
                  <button class="icon-button--delete" data-user-id="@sheep.Id"
                          type="button" data-toggle="modal" data-target="#deleteModal">
                    <i class="material-icons">delete</i>
                  </button>
                </span>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
    <h2></h2>
    <a class="mt-2 btn btn-primary" asp-action="Create">Add herd sheep</a>
  </div>
}
else
{
  <div class="alert alert-info">
    <p>No sheep are currently registered.</p>
    <a class="mt-2 btn btn-primary" asp-action="Create">Add herd sheep</a>
  </div>
}

<h4 class="text-light mb-3 mt-3">Feedlot</h4>
@if (Model.FeedlotSheep.Any())
{
  <div class="table-responsive-md text-light">
    <table id="feedlotTable" class="table table-striped table-dark table-hover" style="width:100%">
      <thead>
        <tr>
          <th class="filterable"><div>Tag</div></th>
          <th class="filterable"><div>Tag Color</div></th>
          <th class="filterable"><div>State</div></th>
          <th class="filterable"><div>Gender</div></th>
          <th class="filterable"><div>Weight (kg)</div></th>
          <th class="filterable"><div>Birth Date</div></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var child in Model.FeedlotSheep)
        {
          <tr>
            <td>@child.TagNumber</td>
            <td>@child.Color.Name</td>
            <td>@child.SheepStatus.Name</td>
            <td>@child.Gender.Type</td>
            <td>@child.Weight</td>
            <td>@child.BirthDate.ToShortDateString()</td>
            <td>
              <div class="d-flex align-content-center">
                <a class="icon-button mr-1 ml-1" asp-action="ChildDetails" asp-route-id="@child.Id"
                   data-toggle="tooltip" data-placement="top" title="View">
                  <i class="material-icons">search</i>
                </a>
                <a class="icon-button mr-1 ml-1" asp-action="EditChild" asp-route-id="@child.Id"
                   data-toggle="tooltip" data-placement="top" title="Edit">
                  <i class="material-icons">edit</i>
                </a>
                <span data-toggle="tooltip" class="icon-button--delete mr-1 ml-1" data-placement="top" title="Delete">
                  <button class="icon-button--delete" data-user-id="@child.Id"
                          type="button" data-toggle="modal" data-target="#deleteModal">
                    <i class="material-icons">delete</i>
                  </button>
                </span>
              </div>
            </td>
          </tr>
        }
      </tbody>
    </table>
    <h2></h2>
    <a class="mt-2 btn btn-primary" asp-action="CreateChild">Add feedlot sheep</a>
  </div>
}
else
{
  <div class="alert alert-info">
    <p>No sheep are currently registered.</p>
    <a class="mt-2 btn btn-primary" asp-action="Create">Add feedlot sheep</a>
  </div>
}

<partial name="_ModalDelete" />

@section Scripts {
  <script>
    $(document).ready(function () {
      appns.sheep.list();

    });
  </script>
}