@model SheepIndexViewModel

@{
  ViewBag.Title = "Sheep List";
}

<div class="shadow rounded bg-secondary p-1 pl-3 mb-3">
  <h1 class="text-light mb-3 display-4">Farm Sheep</h1>
</div>

<h4 class="text-light mb-3">Herd</h4>
<partial name="_UpdateMessage" />


<form method="post">
  <div class="table-responsive text-light">
    <table id="herdTable" class="table table-striped table-dark table-hover" style="width:100%">
      <thead>
        <tr>
          <th>Id</th>
          <th>Tag</th>
          <th>Tag Color</th>
          <th>State</th>
          <th>Gender</th>
          <th>Weight (kg)</th>
          <th>Birth Date</th>
          <th>Mother</th>
          <th>Father</th>
          <th>Action</th>
        </tr>
      </thead>
    </table>
    <a class="mt-2 btn btn-primary" asp-action="Create">Add sheep</a>
  </div>
</form>


<partial name="_ModalDelete" />

@section Scripts {
  <script>
    $(document).ready(function () {
      appns.sheep.index();
    });
  </script>
}