@model GroupEditViewModel

@{
  ViewData["Title"] = "Create";
}

<div class="col-lg-6">
  <h1 class="mb-3 text-light">Create Group</h1>

  <form class="text-light" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
      <div class="col-6 mb-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>
      <div class="col-6 mb-3">
        <label asp-for="PenId" class="control-label"></label>
        <select asp-for="PenId" class="form-control" asp-items="@Model.Pens">
          <option value="" hidden disabled selected></option>
        </select>
        <span asp-validation-for="PenId" class="text-danger"></span>
      </div>
    </div>
    <div class="form-row mb-3">
      <div class="col-12">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
      </div>
    </div>
    <div class="form-group mt-3">
      <input type="submit" value="Save" class="btn btn-primary" />
    </div>
  </form>

  <div class="mt-3">
    <a asp-action="Index">Back to List</a>
  </div>
</div>

@section Scripts {
  <script defer>
  $(function () {
    appns.groups.create();
  });
  </script>
}

