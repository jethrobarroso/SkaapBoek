@model FeedCreateViewModel

@{
  ViewBag.Title = "New Feed";
}

<h1 class="text-light display-4">Add Feed</h1>

<form id="feedCreateForm" class="text-light" method="post" asp-action="Create">
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label asp-for="@Model.Name"></label>
      <input asp-for="@Model.Name" class="form-control" />
      <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
      <label asp-for="@Model.ProductCode"></label>
      <input asp-for="@Model.ProductCode" class="form-control" />
      <span asp-validation-for="@Model.ProductCode" class="text-danger"></span>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-6 mb-3">
      <label asp-for="@Model.CostPrice"></label>
      <div class="input-group">
        <div class="input-group-prepend">
          <div class="input-group-text">R</div>
        </div>
        <input class="form-control" asp-for="@Model.CostPrice" />
      </div>
      <span asp-validation-for="@Model.CostPrice" class="text-danger"></span>
    </div>
    <div class="col-md-6 mb-3">
      <label asp-for="@Model.Supplier"></label>
      <input asp-for="@Model.Supplier" class="form-control" />
      <span asp-validation-for="@Model.Supplier" class="text-danger"></span>
    </div>
  </div>
  <div class="form-row">
    <div class="col-md-12 mb-3">
      <label asp-for="@Model.Description"></label>
      <textarea asp-for="@Model.Description" multiple class="form-control "></textarea>
      <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
  </div>
  <div asp-validation-summary="ModelOnly" class="text-danger"></div>
  <div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary text-light">Cancel</a>
    <input id="btnCreate" type="submit" class="btn btn-primary" value="Create" />
  </div>
</form>

@section Scripts {
  <script defer>
    $(function () {
      appns.feed.create();
    });
  </script>
}